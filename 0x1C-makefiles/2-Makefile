# Variables
CC = gcc
SRC = $(wildcard *.c)
OBJ = $(SRC:.c=.o)
NAME = school

# Default target
all: $(NAME)

# Rule to build the final executable
$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

# Rule to build object files
%.o: %.c
	$(CC) -c -o $@ $<

# Phony target for cleaning
.PHONY: clean
clean:
	rm -f $(OBJ) $(NAME)
